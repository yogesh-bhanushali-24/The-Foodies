<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up_with_phone_number" >


        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Login or Register"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
        />
        <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="We bring the happiness to your doorstep"
        android:textSize="15sp"

        android:layout_marginLeft="20sp"
            android:layout_marginTop="50sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:layout_marginEnd="40sp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_baseline_verified_user_24"
        app:endIconContentDescription="@string/common_google_play_services_enable_title"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:prefixText="+91"
        app:prefixTextColor="@color/black">

        <EditText
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone Number"
            android:maxLength="10"
            android:backgroundTint="@color/white"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.gms.common.internal.SignInButtonImpl
        android:id="@+id/btn1"
        style="@style/TextViewTitleMedium16"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180sp"
        android:layout_marginRight="20sp"
        android:backgroundTint="@color/darkYellow"
        android:text="Continue">

    </com.google.android.gms.common.internal.SignInButtonImpl>


    <com.google.android.material.textview.MaterialTextView

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25sp"
        android:textColor="@color/colorGrey_900"
        android:gravity="center"
        android:id="@+id/txtBottom"
        android:background="@color/colorWhite"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/don_t_worry_your_phone_number_will_not_be_shared_with_anyone_please_read_our_terms_of_service_and_privacy_policy"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        style="@style/TextViewTitleRegular12">
    </com.google.android.material.textview.MaterialTextView>



</RelativeLayout>